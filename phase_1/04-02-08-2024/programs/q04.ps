static int GetNthTerm_21_22_24_27(int N) //5
{
    int term = 21;  //21 22 24 27 31
    int difference = 1;//1 2 3 4 5
    for (int I = 1; I <= N; I++) //1 2 3 4 5
    {
        if( I == N )
        {
            break;
        }
        //
        term = term + difference;//21+1=22,22+2=24,24+3=27, 27+4=31
        difference = difference + 1;
    }
    return term;
